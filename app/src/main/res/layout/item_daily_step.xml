<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llArchivementView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/dailystepshape"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDailyLabel"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="3K"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llLevalCount"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/tvDailyLabel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/primary_cricle">

            <TextView
                android:id="@+id/tvlevelcount"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center"
                android:text="3K"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbCompletedBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:padding="@dimen/_5sdp"
        android:progress="45" />

    <TextView
        android:id="@+id/tvProgressLabel"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="3K"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>